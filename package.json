{
    "name": "ubio-tech-test",
    "version": "1.0.0",
    "description": "Alex Cupit's backend developer technical test for UBIO",
    "type": "module",
    "main": "out/bin/serve.js",
    "scripts": {
        "start": "node out/bin/serve",
        "dev": "npm run clean && tsc -w",
        "lint": "eslint --ext=.js,.ts --cache .",
        "clean": "rm -rf out",
        "compile": "npm run clean && tsc",
        "pretest": "npm run compile && docker run -d --name app-instance-test -p 27017:27017 mongo mongod --setParameter ttlMonitorSleepSecs=1",
        "test": "MONGO_URL='mongodb://127.0.0.1:27017/' NODE_ENV=test mocha out/test/**/*.test.js --timeout 10000",
        "posttest": "docker stop app-instance-test && docker rm app-instance-test",
        "docs": "npm run docs:openapi && npm run docs:api",
        "docs:openapi": "generate-openapi > openapi.json",
        "docs:api": "generate-docs > API.md",
        "preversion": "npm run lint && npm run compile",
        "version": "npm run docs && git add openapi.json API.md",
        "postversion": "git push origin $(git rev-parse --abbrev-ref HEAD) --tags"
    },
    "author": "Alex Cupit",
    "license": "ISC",
    "dependencies": {
        "@types/koa": "^2.15.0",
        "@types/mongodb": "^4.0.7",
        "@ubio/framework": "^15.11.1",
        "dotenv": "^16.4.5",
        "koa": "^2.15.3",
        "mesh-ioc": "^3.3.1",
        "mongodb": "^6.7.0",
        "reflect-metadata": "^0.1.14"
    },
    "devDependencies": {
        "@nodescript/eslint-config": "^1.2.0",
        "@types/chai": "^4.3.16",
        "@types/mocha": "^10.0.7",
        "@types/node": "^20.14.8",
        "@types/supertest": "^6.0.2",
        "chai": "^5.1.1",
        "eslint": "^8.57.0",
        "mocha": "^10.5.1",
        "npm-run-all": "^4.1.5",
        "supertest": "^7.0.0",
        "typescript": "^5.5.2"
    }
}
